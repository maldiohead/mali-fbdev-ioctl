optflags := -O2 -march=armv7-a -mcpu=cortex-a9 -mfpu=neon -mfloat-abi=hard
compiler := gcc
cflags   := -D_GNU_SOURCE -fPIC -rdynamic
ldflags  := -shared -nostartfiles

ifndef platform
platform := $(shell $(compiler) -dumpmachine)
endif

ifeq (release-lto,$(build))
cflags += $(optflags) -flto=4 -fuse-linker-plugin -DNDEBUG
ldflags += $(optflags) -flto=4 -fuse-linker-plugin
endif

ifeq (release,$(build))
cflags += $(optflags) -DNDEBUG
endif

ifeq (debug,$(build))
cflags += -O0 -g -DHOOK_VERBOSE=1
endif

objects := hook.so dump.so

all: $(objects)

%.o: %.c
	$(compiler) $(cflags) -c -o $@ $<

%.so: %.o; $(compiler) $(ldflags) -o $@ $< -ldl

clean:
	rm -f $(objects)

strip:
	strip -s $(objects)
